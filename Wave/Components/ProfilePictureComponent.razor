
<img class="aspect-square max-w-full" src="/api/user/pfp/@ProfileId?size=@Size" alt="" loading="@(LoadAsync ? "lazy" : "eager")" width="@Size" height="@Size" onerror="this.remove()" />


@code {
    [Parameter] 
    public string ProfileId { get; set; } = string.Empty;
    [Parameter]
    public int Size { get; set; } = 800;
    [Parameter] 
    public bool LoadAsync { get; set; } = true;
}
