{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [ "ES2020", "ES2020.Promise", "DOM", "DOM.Iterable" ],
        "module": "ESNext",
        "skipLibCheck": true,

        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        "strict": true
    },
    "references": [
        { "path": "./tsconfig.node.json" }
    ]
}